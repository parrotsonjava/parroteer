<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="com.tngtech.leapdrone.ui.FxController" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <GridPane alignment="center" hgap="5" vgap="5">
        <Button text="Take off" onAction="#onButtonTakeOffAction" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Land" onAction="#onButtonLandAction" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="Flat trim" onAction="#onButtonFlatTrimAction" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Button text="Emergency" onAction="#onButtonEmergencyAction" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <Button text="Switch camera" onAction="#onButtonSwitchCameraAction" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button text="LED animation" onAction="#onButtonLedAnimationAction" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="Flight animation" onAction="#onButtonFlightAnimationAction" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

        <CheckBox onAction="#onCheckBoxExpertModeAction" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Expert mode"/>
    </GridPane>

    <Label fx:id="labelBattery" text="Battery: N/A %"/>
    <ImageView fx:id="imageView" fitWidth="640" fitHeight="360"/>
</VBox>